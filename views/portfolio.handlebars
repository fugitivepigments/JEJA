{{#section 'head'}}
    <title>DRY MEMES - Portfolio {{portfolio_name}}</title>
    <link rel="stylesheet" href="/css/collection.css">
{{/section}}

	<div class="row">
		<div class="col-12">
			<div class="card portfolio-view">
				<div class="card-header">
					<h2 class="portfolio-view-name">Portfolio: {{portfolio_name}}</h2>
				</div>
				<div class="card-body">
					<div class="row">
						{{#each Memes}}
						<div class="card m-2 portfolio-meme-display">
							<h3 class="meme-title text-center">{{meme_name}}</h3>
							<img src="{{og_img}}" data-og-img="{{og_img}}" data-new-img="{{new_img}}" data-meme_text="{{meme_text}}" alt="{{meme_text}}">
						</div>
						{{/each}}
					</div>
				</div>
			</div>
		</div>
	</div>

{{#section 'scripts'}}
<script src="/js/collection.js" type="text/javascript"></script>
{{/section}}
