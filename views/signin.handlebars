<div id="sign-up" class="jumbotron bg-dark">
    <div class="row">
        <form id="signin-form-alt" action="/signin" method="post">
            <div class="form-group">
                <label for="signin-email" class="text-white text-left sign-up-label">Email address</label>
                <input name="email" type="email" class="form-control" id="signin-email" placeholder="Enter email">
            </div>
            <div class="form-group">
                <label for="signin-password" class="text-white text-left sign-up-label">Password</label>
                <input name="password" type="password" class="form-control" id="signin-password" placeholder="Password">
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="signin-persist">
                <label class="form-check-label text-white" for="signin-persist">Remember me</label>
            </div>
            <button id="signin-alt" type="submit" class="btn btn-primary w-100">Sign in</button>
        </form>    
    </div>
<div>

<script type="text/javascript">
	if(localStorage.getItem('userData') || sessionStorage.getItem('userData')){
		localStorage.removeItem('userData');
		sessionStorage.removeItem('userData');

		$("#curr-user").text('');

		$("#btn-login").show();
		$("#btn-logout").hide();
		$("#collection-link").hide();

	}

	function toggleLoginLogOut(){
		// Toggle the log in/out buttons
		$("#btn-login").toggle();
		$("#btn-logout").toggle();
		$("#collection-link").toggle();
	}
</script>