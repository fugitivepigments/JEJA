<div id="sign-up" class="jumbotron bg-dark">
    <div class="row">
        <div class="col text-center justify-content-center">
            <form id="signin-form-alt" action="/signin" method="POST" class="w-50 sign-up-form text-center">
                <div class="form-group">
                    <label for="email-alt" class="text-white sign-up-label">Email</label>
                    <input name="email" type="email" class="form-control sign-input" id="email-alt" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="password-alt" class="text-white sign-up-label">Password</label>
                    <input name="password" type="password" class="form-control sign-input" id="password-alt" placeholder="Password">
                </div>
                <div class="form-check" style="float: left">
                    <input type="checkbox" class="form-check-input" id="signin-alt-persist">
                    <label class="form-check-label text-white" for="signin-alt-persist">Remember me</label>
                </div>
                <button class="btn btn-primary submit-sign-up" type="submit">Sign in</button>
            </form>
        </div>
    </div>
</div>    

<script type="text/javascript">
	if(localStorage.getItem('userData') || sessionStorage.getItem('userData')){
		localStorage.removeItem('userData');
		sessionStorage.removeItem('userData');

		$("#curr-user").text('');

		$("#btn-login").show();
		$("#btn-logout").hide();
		$("#collection-link").hide();

	}

	function toggleLoginLogOut(){
		// Toggle the log in/out buttons
		$("#btn-login").toggle();
		$("#btn-logout").toggle();
		$("#collection-link").toggle();
	}
</script>