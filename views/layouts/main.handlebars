<body>
    <!-- Start Navbar -->
    <nav id="nav-main" class="navbar navbar-expand-sm navbar-dark bg-dark fixed-top">
        <button class="navbar-toggler mr-2" type="button" data-toggle="collapse" data-target="#navbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a href="/" style="text-decoration:none"><span class="navbar-brand d-flex flex-fill">DRY MEMES</span></a>
        <div class="d-flex flex-fill">
            <!--spacer-->
        </div>
        <div class="navbar-collapse collapse" id="navbar">
            <ul class="navbar-nav justify-content-end d-flex flex-fill">
                <form class="form-inline my-2 my-lg-0" class="search-form"action="/search" method="GET">
                    <div class="search-toggle" style="display: none">
                        <input class="form-control mr-sm-2 search-input" type="search" placeholder="Search" aria-label="Search" name="q">
                    </div>
                    <button class="search-btn">
                        <i id="searchShow" class="fa fa-search"></i>
                    </button>
                </form>
                <li class="nav-item">
                    <a href="#" class="nav-link" id="curr-user"></a>
                </li>
