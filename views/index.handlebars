{{#section 'head'}}
    <title>ArtMeme</title>
    <link rel="stylesheet" href="/css/style.css">
{{/section}}

<div class="demo jumbotron d-flex justify-content-center align-items-center">
    <h2 class="text-center">Placeholder for future GIF</h2>
</div>
<div id="sign-up" class="jumbotron bg-dark">
    <div class="row">
        <div class="col text-center">
            <button id="signup" class="btn-primary btn-lg sign-up-button" type="submit">
                Sign Up!
            </button>
            <!-- Sign up form will be inserted here dynamically -->
   
            <form id="signup-form" action="#" method="POST" style="display: none;">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input name="name" type="text" class="form-control" id="name" placeholder="Enter your name">
                </div>
                <div class="form-group">
                    <label for="email">Email address</label>
                    <input name="email" type="email" class="form-control" id="email" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input name="password" type="password" class="form-control" id="password" placeholder="Password">
                </div>
                <button class="btn btn-primary" type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>
<div class="container">
    <!-- Content will be inserted here -->
    <div class="row my-5 d-flex justify-content-center artwork">
    {{#each artworks}}
        <a href="/meme-editor">
            <img src="{{img_url}}" alt="{{title}}" data-artworkid="{{id}}" class="meme m-4">
        </a>
    {{/each}}
        
    </div>
</div>

{{#section 'scripts'}}
<script src="/js/main.js" type="text/javascript"></script>
{{/section}}