{{#section 'head'}}
    <title>ArtMeme - Collection</title>
    <link rel="stylesheet" href="/css/collection.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300i,400" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
{{/section}}

<h1 class="title">My Meme Collection</h1>
<p class="lead"><i>(Hover cursor to see text)</i></p>

<div class="">
	<div class="row">
	{{#each memes}}
		<div class="card">
			<h3 class="meme-title text-center">{{meme_name}}</h3>
			<img src="{{og_img}}" data-og-img="{{og_img}}" data-new-img="{{new_img}}" data-meme_text="{{meme_text}}" alt="{{meme_text}}">
		</div>
	{{/each}}
	</div>
</div>

{{#section 'scripts'}}
<script src="/js/collection.js" type="text/javascript"></script>
{{/section}}    