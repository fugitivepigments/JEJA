{{#section 'head'}}
    <title>DRY MEMES - Collection</title>
    <link rel="stylesheet" href="/css/collection.css">
{{/section}}

<h1 class="title">Meme Collection</h1>
<p class="lead"><i>(Hover cursor to see text)</i></p>

<div class="">
	<div class="row d-flex justify-content-around">
	{{#each memes}}
  <div class="card-wrapper">
		<div class="card">
			<h3 class="meme-title text-center">{{meme_name}}</h3>
			<img src="{{og_img}}" data-og-img="{{og_img}}" data-new-img="{{new_img}}" data-meme_text="{{meme_text}}" alt="{{meme_text}}" data-memeid="{{id}}">
      <div class="card-block text-right">
          <button class="card-link btn-edit text-primary">Edit</button>
          <button class="card-link btn-delete text-danger">Delete</button>
      </div>
      <div class="ssk-group ssk-xs">
          <a href="https://www.instagram.com/?hl=en" target="_blank" class="ssk-alizarin ssk ssk-instagram" title="Instagram"></a>
          <a href="https://www.facebook.com/" target="_blank" class="ssk-alizarin ssk ssk-facebook"></a>
          <a href="https://twitter.com/?lang=en" target="_blank" class="ssk-alizarin ssk ssk-twitter"></a>
      </div>
		</div>
  </div>
	{{/each}}
	</div>
</div>

{{#section 'scripts'}}
<script src="/js/collection.js" type="text/javascript"></script>
{{/section}}
