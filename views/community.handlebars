{{#section 'head'}}
    <title>DRY MEMES - Community</title>
    <link rel="stylesheet" href="/css/community.css">
{{/section}}

<h1>Our Community</h1>
<p class="lead"><i>Browse memes and portfolios from the international, stylish, hilarious, and down-to-earth Dry Memes community.</i></p>

{{#each users}}
<div class="row">
	<div class="col-12">
		<div class="card m-4">
			<div class="card-header d-flex flex-row justify-content-between">
				<h5 class="card-title title-large">{{name}}'s Collection</h5>
			</div>
			<div class="card-body">
				<h3 class="title-small"><i>{{name}}'s Memes ({{Memes.length}})</i></h3>
				<div class="row">
					{{#each Memes}}
					<div class="card meme-card">
						<h3 class="meme-title text-center">{{meme_name}}</h3>
						<img src="{{og_img}}" data-og-img="{{og_img}}" data-new-img="{{new_img}}" data-meme_text="{{meme_text}}" alt="{{meme_text}}" data-memeid="{{id}}">
					</div>
					{{/each}}
				</div><br>
				<h3 class="title-small"><i>{{name}}'s Portfolios ({{Portfolios.length}})</i></h3>
				<div id="portfolio-list" class="row">
				{{#each Portfolios}}
					<div class="portfolio">
						<a href="/user/{{UserId}}/portfolio/{{id}}" class="portfolio-link">
						<div class="card portfolio-card m-2" data-portfolio-id="{{id}}" data-cover="{{cover_img}}">
							<h3 class="meme-title text-center">{{portfolio_name}}</h3>
							<div class="img-holder">
								<img src="{{cover_img}}">
							</div>
						</div>
						</a>
					</div>
				{{/each}}
				</div>
			</div>
		</div>
	</div>
</div>
{{/each}}

{{#section 'scripts'}}
<script src="/js/collection.js" type="text/javascript"></script>
{{/section}}
